<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.lucia.applicazionelab.MainETab.Prenota">

    <TextView
        android:id="@+id/textprenot"
        android:layout_width="0dp"
        android:layout_height="29dp"
        android:text="Procedi con la prenotazione"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        android:textColor="@android:color/holo_orange_dark"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Per quanti giorni desideri prenotare il libro?"
        android:textColor="@android:color/holo_orange_dark"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textprenot" />

    <CheckBox
        android:id="@+id/check1week"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Una settimana"
        android:textColor="@android:color/holo_orange_dark"
        android:textStyle="bold"
        app:buttonTint="@android:color/holo_orange_dark"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:layout_marginLeft="53dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <CheckBox
        android:id="@+id/check2weeks"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Due settimane"
        android:textColor="@android:color/holo_orange_dark"
        android:textStyle="bold"
        app:buttonTint="@android:color/holo_orange_dark"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/check1week"
        android:layout_marginLeft="53dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <CheckBox
        android:id="@+id/check20gg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="20 giorni"
        android:textColor="@android:color/holo_orange_dark"
        android:textStyle="bold"
        app:buttonTint="@android:color/holo_orange_dark"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/check2weeks"
        android:layout_marginLeft="53dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:text="Le opzioni indicano la durata massima dell'utilizzo del libro, puoi consegnare il libro anche prima della scadenza."
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/holo_orange_dark"
        android:textStyle="bold"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/check20gg"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/ButtonPrenota"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:text="PRENOTA"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:layout_marginRight="27dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.157" />

</android.support.constraint.ConstraintLayout>
