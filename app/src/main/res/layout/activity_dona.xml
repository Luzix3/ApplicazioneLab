<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lucia.applicazionelab.Passworddim.PagePassDim">


    <ScrollView
        android:id="@+id/Scrollviewdona"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.272"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textLibro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Scrivi il titolo del libro che vuoi donare:"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/holo_orange_dark"
                android:textColorLink="@android:color/holo_orange_dark" />

            <EditText
                android:id="@+id/editLibro"
                android:layout_width="231dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textCalendario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seleziona il giorno in cui passerai da noi:"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/holo_orange_dark"
                android:textColorLink="@android:color/holo_orange_dark" />

            <DatePicker
                android:id="@+id/datePicker"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/holo_orange_light"
                android:backgroundTint="@android:color/holo_orange_light"
                android:backgroundTintMode="src_over"
                android:calendarTextColor="@android:color/holo_orange_dark"
                android:datePickerMode="spinner"
                android:dayOfWeekBackground="@android:color/black"
                android:dayOfWeekTextAppearance="@android:color/black"
                android:headerBackground="@android:color/holo_orange_dark"
                android:headerDayOfMonthTextAppearance="@android:color/black" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/buttonProcediLibro"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_orange_dark"
                android:text="Procedi" />
        </LinearLayout>
    </ScrollView>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline7"
        app:layout_constraintGuide_begin="52dp"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/textDona"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Dona un libro!"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toTopOf="@+id/guideline7"
        app:layout_constraintHorizontal_bias="0.119"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.571" />
</android.support.constraint.ConstraintLayout>
